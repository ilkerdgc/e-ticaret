
@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:30px; width:29%; background-color:lightgray">
    <label><span style="color:red">*Daha önceden hesap açtıysanız bilgilerinizi girerek giriş yapabilirsiniz!</span></label>
    @using (Html.BeginForm("Giris", "Login", FormMethod.Post))
    {
        <table class="table table-bordered">
            <tr>
                <td><label>Kullanıcı Adı:</label></td>
            </tr>
            <tr>
                <td><input type="text" name="UserName" required placeholder="Kullanıcı adını giriniz..." style="width:100%" class="form-control" /></td>
            </tr>
            <tr>
                <td><label>Şifre:</label></td>
            </tr>
            <tr>
                <td><input type="text" name="Password" required placeholder="Şifrenizi giriniz..." style="width:100%" class="form-control" /></td>
            </tr>
            <tr>
                <td><button type="submit" class="btn btn-success form-control">Giriş</button></td>
            </tr>
        </table>
    }    
</div>

