
@{
    ViewBag.Title = "UyeOl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:30px; width:65%; background-color:lightgray" >
    <label><span style="color:red">*Hızlı ve güvenli bir alışveriş için yeni bir hesap oluşturun.</span></label>
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            @using (Html.BeginForm("UyeOl", "Login", FormMethod.Post))
            {
                <table class="table table-bordered">
                    <tr>
                        <td>
                            <label>İsim:</label>
                        </td>
                        <td>
                            <input type="text" name="isim" required placeholder="Adınızı Giriniz..." class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Soyisim:</label>
                        </td>
                        <td>
                            <input type="text" name="soyisim" required placeholder="Soyisminizi Giriniz..." class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Kullanıcı Adı:</label>
                        </td>
                        <td>
                            <input type="text" name="kullaniciadi" required placeholder="Kullanıcı Adınızı Giriniz..." class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Şifreniz:</label>
                        </td>
                        <td>
                            <input type="text" name="sifre" required placeholder="Şifrenizi Giriniz..." class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Yaş:</label>
                        </td>
                        <td>
                            <input type="number" name="yas" required placeholder="Yaş Giriniz..." class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Cinsiyet:</label>
                        </td>
                        <td>
                            <input type="checkbox" name="cinsiyet" /> Erkek <input type="checkbox" name="cinsiyet" /> Kadın
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Doğum Tarihi:</label>
                        </td>
                        <td>
                            <input type="date" required name="dogumtarihi" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>E-Mail:</label>
                        </td>
                        <td>
                            <input type="text" name="email" required placeholder="E-Mail Adresinizi Giriniz..." class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Cep Telefonu:</label>
                        </td>
                        <td>
                            <input type="text" name="telefon" placeholder="Telefon Numaranızı Giriniz..." class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Adres:</label>
                        </td>
                        <td>
                            <input type="text" name="adres" placeholder="Adresinizi Giriniz..." class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <button type="submit" class="btn btn-success form-control">ONAYLA</button>
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>



