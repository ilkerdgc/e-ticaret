
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container">
        <div class="row">
            @{
                foreach (var item in TempData["urunler"] as IEnumerable<ETicaretProjesi.Models.Product>)
                {
                    <div class="col-md-4">
                        <div class="thumbnail">
                            <img src="@Url.Content(item.ImageUrl)" alt="@Url.Content(item.AltText)" style="width:100%">
                            <div class="caption">
                                <p>@item.ShortDescription</p>
                                <p><h4><b>@item.Name - @item.UnitPrice TL</b></h4></p>
                                <a href="@Url.Action("UrunDetay", new { id = item.ProductID })" class="btn btn-success">ÜRÜN DETAY</a>
                            </div>
                        </div><br />
                    </div>
                }
            }
        </div>
    </div>